{
  "name": "omneo-polymer-tester",
  "version": "1.8.4",
  "description": "Runs unit tests for Polymer components",
  "author": "Jon Wolfe <jonathan.wolfe@siemens.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://code.siemens.com/mindsphere-mainline/analyticsservices/product-intelligence/polymer/omneo-polymer-tester"
  },
  "publishConfig": {
    "registry": "https://captain.rtf.siemens.net/artifactory/api/npm/mindsphere_rnd-dev-npm/"
  },
  "bin": {
    "opt": "./src/runner.js"
  },
  "files": [
    "src/runner.js",
    "src/server.js",
    "dist"
  ],
  "scripts": {
    "******************** BUILDERS ********************": "",
    "build": "gulp build",
    "build:coverage": "gulp clean && gulp build --coverage",
    "build:production": "gulp clean && gulp build --production",
    "build:dist": "gulp clean && gulp build --production && gulp copy",
    "******************** LINTERS ********************": "",
    "lint": "npm run eslint",
    "eslint": "eslint src/**/*.js test/**/*.js .eslintrc.js",
    "******************** TESTS ********************": "",
    "server": "node ./src/server.js start --port 3434",
    "test": "node ./src/runner.js run",
    "test:coverage": "node ./src/runner.js run --coverage"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "gulp": "<4.0.0",
    "np": "^4.0.2",
    "omneo-polymer-build": "^1.3.4"
  },
  "dependencies": {
    "chai": "^4.2.0",
    "chalk": "^2.4.2",
    "chokidar": "^3.0.1",
    "compression": "^1.7.3",
    "connect-history-api-fallback": "^1.6.0",
    "express": "^4.17.1",
    "fs-extra": "^8.0.1",
    "helmet": "^3.18.0",
    "mocha": "^6.0.2",
    "node-dir": "^0.1.17",
    "npm-run": "^5.0.1",
    "nyc": "^14.1.1",
    "pretty-ms": "^5.0.0",
    "puppeteer": "1.12.2",
    "serve-static": "^1.14.1",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "yargs": "^13.2.4"
  },
  "resolutions": {
    "gaze": "^1.1.3",
    "graceful-fs": "^4.1.15",
    "minimatch": "^3.0.4",
    "minimist": "^1.2.0"
  },
  "browserList": [
    "IE 11",
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "not dead"
  ]
}
